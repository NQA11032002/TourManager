@model ManagerTour.Models.User_information

@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/Home.cshtml";
}

<link href="~/Content/css/detail_post.css" rel="stylesheet" />

@using (Html.BeginForm("InsertUser", "User", FormMethod.Post))
{
<div class="post_detail form_detail card border-0">
    <h1 class="text-center fw-bold h3 mb-3 pb-3">Detail Information User</h1>

    <div class="mb-3">
        <label class="form-label">Name Type Travel</label>
        <input type="email" class="form-control title_input shadow-non" name="email" placeholder="Enter email..." />
        @if (!string.IsNullOrEmpty(TempData["email_error"] as string))
        {
            <p class="error">@TempData["email_error"]</p>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control title_input shadow-non" name="password" placeholder="Enter password..." />
        @if (!string.IsNullOrEmpty(TempData["password_error"] as string))
        {
            <p class="error">@TempData["password_error"]</p>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control title_input shadow-non" name="name" placeholder="Enter name..." />
        @if (!string.IsNullOrEmpty(TempData["name_error"] as string))
        {
            <p class="error">@TempData["name_error"]</p>
        }
    </div>

    <div class="mb-3">
        <label class="form-label">Birth Day</label>
        <input type="date" class="form-control title_input shadow-non" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="birthDay" placeholder="Enter birth day..." />
    </div>

    <div class="mb-3">
        <select class="form-select shadow-none border" name="role">
            @foreach (var row in ViewBag.ListRole)
            {
                <option value="@row.Id">@row.Role</option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Gender</label>
        <div class="d-flex align-items-center">
            <label class="d-flex align-items-center gender_user">
                <input checked type="radio" value="1" name="gender" />
                Male
            </label>

            <label class="d-flex align-items-center gender_user">
                <input type="radio" value="0" name="gender" />
                Female
            </label>
        </div>
    </div>



    @if (!string.IsNullOrEmpty(TempData["insert_error"] as string))
    {
        <p class="error">@TempData["insert_error"]</p>
    }

    <div class="d-flex justify-content-end">
        <a href="~/User/Index" class="cancel_update btn">Cancel</a>
        <button type="submit" class="update_detail btn btn-dark">Insert</button>
    </div>
</div>
}

