@model ManagerTour.Models.Roles

@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/Home.cshtml";
}

<link href="~/Content/css/detail_post.css" rel="stylesheet" />

@using (Html.BeginForm("rolesInsert", "Roles", FormMethod.Post))
{
    <div class="post_detail form_detail card border-0">
        <h1 class="text-center fw-bold h3 mb-3 pb-3">Detail Role</h1>

        <div class="mb-3">
            <label class="form-label">Role</label>
            @Html.TextBoxFor(m => m.Role, new {name = "role", @class="form-control title_input shadow-non", placeholder = "Enter role of user..." })
            @Html.ValidationMessageFor(m => m.Role)
        </div>

        <div class="d-flex justify-content-end">
            <a href="~/Roles/Index" class="cancel_update btn">Cancel</a>
            <button type="submit" class="update_detail btn btn-dark">Insert</button>
        </div>
    </div>
}


