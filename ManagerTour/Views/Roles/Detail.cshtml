@model List<ManagerTour.Models.Roles>

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/Home.cshtml";
}

<link href="~/Content/css/detail_post.css" rel="stylesheet" />
<link href="~/Content/css/tour.css" rel="stylesheet" />

@using (Html.BeginForm("Update", "Roles", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="post_detail form_detail card border-0 tour_detail">
        <h1 class="text-center fw-bold h3 mb-3 pb-3">Detail Role</h1>

        <input type="text" name="id" value="@Model[0].Id" hidden />

        <div class="mb-3">
            <label class="form-label">Role</label>
            @Html.TextBoxFor(m => Model[0].Role, new { @class = "form-control title_input shadow-non" })
            @Html.ValidationMessageFor(m => Model[0].Role)
        </div>
        <div class="d-flex justify-content-end">
            <a href="~/Roles/Index" class="cancel_update btn">Cancel</a>
            <button type="submit" class="update_detail btn btn-dark">Update</button>
        </div>
    </div>
}
