@model ManagerTour.Models.Vehicles

@{
    ViewBag.Title = "Insert";
    Layout = "~/Views/Shared/Home.cshtml";
}


<link href="~/Content/css/detail_post.css" rel="stylesheet" />

@using (Html.BeginForm("postInsert", "Vehicle", FormMethod.Post))
{
    <div class="post_detail form_detail card border-0">
        <h1 class="text-center fw-bold h3 mb-3 pb-3">Detail Vehicle Travel</h1>

        <div class="mb-3">
            <label class="form-label">Name Type Travel</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control title_input shadow-non", placeholder = "Enter name vehicle travel..." })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="d-flex justify-content-end">
            <a href="~/Vehicle/Index" class="cancel_update btn">Cancel</a>
            <button type="submit" class="update_detail btn btn-dark">Insert</button>
        </div>
    </div>
}



