@model List<ManagerTour.Models.Posts>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Home.cshtml";
}
<link href="~/Content/css/post.css" rel="stylesheet" />

<div class="breadcrumb d-flex justify-content-between align-items-center m-4">
    <div class="breadcrumb-item d-flex align-items-center">
        <h1>Dashboard</h1>

        <div class="text-break breadcrumb-item-text">
            <a>Post</a>
            <span> / </span>
            <span>Analytic</span>
        </div>
    </div>

    <div class="breadcrumb-date">
        <p>August 1, 2020 - August 31, 2020</p>
    </div>
</div>

<div class="posts">
    @using (Html.BeginForm("Index", "Post", FormMethod.Get))
    {
        <div class="d-flex align-items-center p-3 justify-content-between">
            <div>
                <label class="form-label label_index">Type travel</label>
                <select class="form-select shadow-none user_select filter_type" name="filter_type">
                    <option selected value="0">Tất cả</option>

                    @foreach (var row in ViewBag.ListTypeTravel)
                    {
                        <option @(ViewBag.filter_type == row.Id ? "selected" : "") value="@row.Id">@row.Name</option>
                    }
                </select>
            </div>

            <div>
                <label class="form-label label_index">Search</label>
                <div class="posts_search d-flex justify-content-center position-relative search_input--contain">
                    <input type="text" name="keywordInput" class="search_input border" value="@ViewBag.keywordInput" placeholder="Enter keyword search the post..." />
                    <button id="btn_search" type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </div>
            </div>
        </div>

    }

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col" width="150px">User Name</th>
                <th scope="col" width="100px">Address</th>
                <th scope="col" width="100px">Type</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Status</th>
                <th scope="col">Created</th>
                <th scope="col">Feature</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var post in Model)
            {
                <tr>
                    <td scope="row">@post.Id</td>
                    <td>@post.User.Name</td>
                    <td>@post.Address_travel.Name_travel</td>
                    <td>@post.Type_travel.Name</td>
                    <td>
                        <p class="title">@post.Title</p>
                    </td>
                    <td>
                        <p class="content">@post.Content</p>
                    </td>
                    <td>
                        @if (post.Status == 0)
                        {
                            <p class="fw-bold post_status--private">Riêng tư</p>
                        }
                        else if (post.Status == 1)
                        {
                            <p class="fw-bold post_status--public">Công khai</p>
                        }
                        else if (post.Status == 2)
                        {
                            <p class="fw-bold post_status--hidden">Tạm khóa</p>
                        }
                    </td>
                    <td>@post.Created_at</td>
                    <td>
                        <div class="user_function d-flex align-items-center">
                            <a class="detail" href="~/Post/Detail?id=@post.Id">
                                <i class="fa-regular fa-pen-to-square"></i>
                            </a>

                            <input type="checkbox" class="cb_removePost" hidden id="cb_removePost_@post.Id" />
                            <label for="cb_removePost_@post.Id" class="lb_removePost position-fixed"></label>

                            <div class="card notify-remove-post position-fixed">
                                <div class="card-body">
                                    <h5 class="fw-bold">Are you want remove this post ?</h5>
                                    <p>Choose <b>Remove</b>, The post will <b>remove forever</b></p>

                                    <div class="d-flex justify-content-end mt-3">
                                        <label for="cb_removePost_@post.Id" class="btn btn-notify-post cancel-remove-post d-flex align-items-center justify-content-center">Cancel</label>

                                        <a href="~/Post/Delete?id=@post.Id" class="remove btn-notify-post btn btn-danger">
                                            Remove
                                        </a>
                                    </div>
                                </div>
                            </div>


                            <label for="cb_removePost_@post.Id" class="remove">
                                <i class="fa-regular fa-trash-can"></i>
                            </label>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="pagination d-flex justify-content-between p-2">
        <p class="pagination-page">
            Showing @if (Model.Count > 0)
            {@Model[0].CurrentPage}  to
            @if (Model.Count > 0)
            {@Model[0].TotalPage} of
            @if (Model.Count > 0)
            {@Model[0].TotalPage} entries
        </p>

        <div class="pagination-item d-flex">
            @using (Html.BeginForm("PreviousPage", "Post", FormMethod.Get))
            {
                <button class="pagination-left pagination-arrow">
                    <i class="fa-solid fa-arrow-left"></i>
                </button>
            }


            @using (Html.BeginForm("NextPage", "Post", FormMethod.Get))
            {
                <button class="pagination-right pagination-arrow">
                    <i class="fa-solid fa-arrow-right"></i>
                </button>
            }
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $('.filter_type').change(function () {
            $(this).closest('form').submit();
        });

    });
</script>